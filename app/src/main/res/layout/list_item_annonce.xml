<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="56dp"


        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/list_item_annonce_tv_Title"
        android:layout_width="352dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_tem_annonce_tv_Duree" />

    <TextView
        android:id="@+id/list_tem_annonce_tv_Duree"
        android:layout_width="111dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="DurÃ©e"
        app:layout_constraintStart_toEndOf="@+id/list_item_annonce_tv_NbPlace"
        app:layout_constraintTop_toBottomOf="@+id/list_item_annonce_tv_Location" />

    <TextView
        android:id="@+id/list_item_annonce_tv_NbPlace"
        android:layout_width="99dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:text="Nb Place"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/list_tem_annonce_tv_Duree" />

    <TextView
        android:id="@+id/list_item_annonce_tv_Location"
        android:layout_width="337dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:text="Location"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/list_item_annonce_tv_Description"
        android:layout_width="354dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:lines="5"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_annonce_tv_Title" />

    <TextView
        android:id="@+id/list_item_annonce_tv_Id"
        android:layout_width="33dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Id"
        app:layout_constraintStart_toEndOf="@+id/list_tem_annonce_tv_Duree"
        app:layout_constraintTop_toBottomOf="@+id/list_item_annonce_tv_Location" />

</android.support.constraint.ConstraintLayout>